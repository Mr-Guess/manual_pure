<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<!--add by iBatisTool emp -->
<sqlMap namespace="Emp">
	<!-- add Condition emp -->
	<sql id="mapWhereClause">
		<isParameterPresent>
			<isNotEmpty prepend="and" property="id"> id=#id#</isNotEmpty>
			<isNotEmpty prepend="and" property="name"> name=#name#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="password"> password=#password#
			</isNotEmpty>
			<isNotEmpty prepend="and" property="age"> age=#age#</isNotEmpty>
			<isNotEmpty prepend="and" property="year"> year=#year#
			</isNotEmpty>
		</isParameterPresent>
	</sql>
	<!-- add method insert -->
	<insert id="insert" parameterClass="com.ay.jfds.dev.pojo.Emp">
		insert into emp(
		ID,
		NAME,
		PASSWORD,
		AGE,
		YEAR) values(
		#id#,
		#name#,
		#password#,
		#age#,
		#year#)
	</insert>
	<!-- add method delete -->
	<delete id="delete" parameterClass="java.lang.String">
		update emp set status='0'
		where
		id=#id#
	</delete>
	<!-- add method -->
	<select id="findById" resultMap="com.ay.jfds.dev.pojo.Emp"
		parameterClass="java.lang.String">
		select
		id,
		name,
		password,
		age,
		year
		from
		emp
		where
		id=#id#
	</select>
	<!-- add method update -->
	<update id="update" parameterClass="com.ay.jfds.dev.pojo.Emp">
		update emp
		<dynamic prepend="set">
			<isNotNull prepend="," property="id"> id=#id#</isNotNull>
			<isNotNull prepend="," property="name"> name=#name#</isNotNull>
			<isNotNull prepend="," property="password"> password=#password#
			</isNotNull>
			<isNotNull prepend="," property="age"> age=#age#</isNotNull>
			<isNotNull prepend="," property="year"> year=#year#</isNotNull>
		</dynamic>
		where
		id=#id#
	</update>
	<!-- add method -->
	<select id="findAll" resultMap="com.ay.jfds.dev.pojo.Emp"
		parameterClass="com.ay.jfds.dev.pojo.Emp">
		select
		id,
		name,
		password,
		age,
		year
		from
		emp
		where
		status='1'
	</select>
	<!-- add method find -->
	<select id="find" resultMap="com.ay.jfds.dev.pojo.Emp"
		parameterClass="com.ay.jfds.dev.pojo.Emp">
		select
		id,
		name,
		password,
		age,
		year
		from
		emp
		where
		status='1'
		<include refid="Emp.mapWhereClause" />
	</select>
</sqlMap>
